<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Single page web app using Angularjs</title>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
<div class="container">
    <table>
        <thead>
            <th style="padding: 30px 50px 20px 0">
                <form action="/heartRate" method="GET" class="form-inline">
                    <div class="form-group" style="width: 4%;padding: 5px">
                        <button type="submit" class="btn btn-default">View Heart Rate</button>
                    </div>
                </form>
            </th>
            <th style="padding: 30px 0 20px 0">
            <form action="/steps" method="GET" class="form-inline">
                <div class="form-group" style="width: 4%;padding: 5px">
                    <button type="submit" class="btn btn-default">View Steps</button>
                </div>
            </form>
            </th>
            <th style="padding: 30px 0 20px 680px">
            <form action="/logout" method="GET" class="form-inline">
                <div class="form-group" style="; width: 4%;padding: 5px">
                    <button type="submit" class="btn btn-default">Logout</button>
                </div>
            </form>
            </th>
        </thead>
    </table>
    <br>
    <% if (page == "steps") { %>
        <div>
            <img src="https://plot.ly/~fitbit/2.png" alt="" style="max-width: 100%;width: 3600px;"  width="3600" height="600" onerror="this.onerror=null;this.src='https://plot.ly/404.png';" /></a>
            <script data-plotly="fitbit:2"  src="https://plot.ly/embed.js" async></script>
        </div>


        <table id="stepsTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>     
                <th>Goal</th>
                <th>Actual</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><%= response.goals.steps %></td>
                <td><%= response.summary.steps %></td>
            </tr>
        </tbody>
        </table>
    <% }else { %>
        <div>
            <img src="https://plot.ly/~fitbit/0.png" alt="Minimum vs Minimum" style="max-width: 100%;width: 5000px;"  width="5000" height="600" onerror="this.onerror=null;this.src='https://plot.ly/404.png';" /></a>
            <script data-plotly="fitbit:0"  src="https://plot.ly/embed.js" async></script>
        </div>


        <table id="heartRateTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>     
                <th></th>       
                <% for(var i=0; i<response.length; i++) {%>
                    <th><%= response[i].name %></th>
                <% } %> 
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Minimum</td>
                <% for(var i=0; i<response.length; i++) {%>
                    <td><%= response[i].min %></td>
                <% } %>
            </tr>
            <tr>
                <td>Maximum</td>
                <% for(var i=0; i<response.length; i++) {%>
                    <td><%= response[i].max %></td>
                <% } %>
            </tr>
        </tbody>
        </table>
    <% } %>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://d3js.org/d3.v4.min.js"></script>
<script type="text/javascript" src="home.js"></script>
</body>
</html>